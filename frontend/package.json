{
  "name": "ecommerce-chatbot-frontend",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://alexroygh.github.io/ecommerce-chatbot",
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "axios": "^1.6.7",
    "formik": "^2.4.6",
