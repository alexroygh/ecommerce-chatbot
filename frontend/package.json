    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.32",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1"
